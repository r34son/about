.form
    width 100%
    &__title
        display block
        margin: 0 auto
        padding-right 34px
    &__main
        width 100%
        margin-top 52px
    &__row
        margin-bottom 21px
        @media screen and (max-width: 600px)
            flex-direction: column
            align-items center
    &__label
        font-size: 22px 
        padding-top 20px 
        letter-spacing 0.4px 
    &__input
        padding-left 20px
        margin-left 10px
        @media screen and (max-width: 600px)
            margin: 0
            margin-top 15px
            padding 0
            width 100%
            text-align center
.list
    display flex
    flex-direction: column
.row
    display flex
.input_type_primary
    color #231f20;
    border: none
    line-height 42px
    background-color  rgba(0,0,0,0)
    background: url("../../input.png") no-repeat
    background-position-y: 10px
    flex-grow: 1
    font-size: 30px
    font-family "Courier New"
    &::placeholder
        color #231f20
    &:focus
        outline-offset: 0px
        outline: 0px